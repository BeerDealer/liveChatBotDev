<%- include('./port/layout-start.ejs') %>

<div class="container bg-primary d-flex m-0" style="min-width: 100%">
  <div class="row">
    <div class="col-1">
      <a class="btn p-auto">
        <span class="p-auto">
          <i class="fa-solid fa-chevron-left fs-1 p-auto m-auto"></i>
        </span>
      </a>
    </div>
  </div>
</div>

<div style="height: 20rem"></div>

<div class="p-5 container">
  <form method="POST" action="/send">
    <div class="form-group mb-5">
      <input type="text" name="text" class="form-control" id="inputTitle" />
    </div>

    <div class="form-group text-right d-flex justify-content-center">
      <button type="submit" class="btn btn-primary">
        <span class="fs-1 fw-normal text-light h p-0 m-0 lh"> Отправить </span>
        <i
          class="fa-regular fa-circle-check fs-1 text-light mt-1 mt-sm-0 me-2"
        ></i>
      </button>
    </div>
  </form>
</div>

